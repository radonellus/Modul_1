name = "Радик" #"переменная name и со значением моего имени (значение: строка)"
print(name, type(name)) #"вывод значения переменной name на экран"
age = 38 #"переменная age и со значением моего текущего возраста (значение: целое число)"
print(age, type(age)) #"вывод значения переменной name на экран"
new_age = 39 #"переменная age и со значением моего нового возраста (значение: целое число)"
print(new_age, type(new_age)) #"вывод значения переменной name на экран"
is_student = True
print(is_student, type(is_student)) #"переменная is_student со значением True (логическое значение)
